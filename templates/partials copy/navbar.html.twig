<script>
document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    let isMenuOpen = false;
    
    // Créer l'overlay
    const overlay = document.createElement('div');
    overlay.classList.add('menu-overlay');
    document.body.appendChild(overlay);
    
    // Fonction pour ouvrir le menu
    function openMenu() {
        isMenuOpen = true;
        mobileMenu.classList.add('active');
        mobileMenuButton.classList.add('active', 'fixed-position');
        overlay.classList.add('active');
        document.body.style.overflow = 'hidden'; // Empêcher le défilement
    }
    
    // Fonction pour fermer le menu
    function closeMenu() {
        isMenuOpen = false;
        mobileMenu.classList.remove('active');
        mobileMenuButton.classList.remove('active', 'fixed-position');
        overlay.classList.remove('active');
        document.body.style.overflow = ''; // Autoriser le défilement
    }
    
    // Ouvrir/fermer le menu au clic sur le bouton
    mobileMenuButton.addEventListener('click', function(e) {
        e.stopPropagation();
        if (isMenuOpen) {
            closeMenu();
        } else {
            openMenu();
        }
    });
    
    // Fermer le menu si on clique en dehors
    overlay.addEventListener('click', closeMenu);
    
    // Fermer le menu si on clique sur un lien
    const mobileMenuItems = document.querySelectorAll('.mobile-menu-item');
    mobileMenuItems.forEach(item => {
        item.addEventListener('click', closeMenu);
    });
    
    // Gérer le redimensionnement de la fenêtre
    window.addEventListener('resize', function() {
        // Si écran devient >= md breakpoint de Tailwind (768px) et menu ouvert
        if (window.innerWidth >= 768 && isMenuOpen) {
            closeMenu();
        }
    });
    
    // Animation de rotation des icônes sociales desktop
    const socialIcons = document.querySelectorAll('.social-icon');
    const socialIconsMobile = document.querySelectorAll('.social-icon-mobile');
    let currentIconIndex = 0;

    function rotateSocialIcons() {
        // Pour desktop
        socialIcons.forEach((icon, index) => {
            if (index === currentIconIndex) {
                icon.style.opacity = '1';
            } else {
                icon.style.opacity = '0';
            }
        });
        
        // Pour mobile
        socialIconsMobile.forEach((icon, index) => {
            if (index === currentIconIndex) {
                icon.style.opacity = '1';
            } else {
                icon.style.opacity = '0';
            }
        });
        
        currentIconIndex = (currentIconIndex + 1) % socialIcons.length;
    }

    // Initialiser la première icône
    rotateSocialIcons();

    // Rotation toutes les 2 secondes
    setInterval(rotateSocialIcons, 2000);
    
    // Gestion du menu des réseaux sociaux sur mobile
    const socialIconMobile = document.getElementById('social-icon-mobile');
    const socialDropdown = document.getElementById('social-dropdown');
    let isSocialMenuOpen = false;
    
    socialIconMobile.addEventListener('click', function(e) {
        e.stopPropagation();
        isSocialMenuOpen = !isSocialMenuOpen;
        
        if (isSocialMenuOpen) {
            socialDropdown.classList.add('active');
        } else {
            socialDropdown.classList.remove('active');
        }
    });
    
    // Fermer le menu social si on clique ailleurs
    document.addEventListener('click', function() {
        if (isSocialMenuOpen) {
            socialDropdown.classList.remove('active');
            isSocialMenuOpen = false;
        }
    });
});
</script>